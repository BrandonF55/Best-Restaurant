@{
  Layout = "_Layout";
}

@using BestRestaurant.Models;

<h1><u>Cuisines</u></h1>

@if (@Model.Count == 0)
{
  <h3>No cuisines have been added yet!</h3>
} 
else
{
  <ul>
    @foreach (Cuisine cuisine in Model)
    {
      <li>@Html.ActionLink($"{cuisine.Description}", "Details", new { id = cuisine.CuisineId }) | @cuisine.Restaurant.Name</li>
    }
  </ul>
}

<p>@Html.ActionLink("Add new cuisine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>